<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.nfc.connect.nfc.Farm.ProductLoadResult_FarmActivity">
    <com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar
        android:layout_marginTop="40dp"
        android:id="@+id/pp1"
        android:layout_width="285dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        app:max="1000"



        app:pointer_size="20dp"

        app:pointer_color="#ff3333"
        app:pointer_halo_color="#b9e6ea"

        app:text_color="@color/colorAccent"
        app:text_size="65sp"
        app:wheel_active_color="#ffff00"
        app:wheel_unactive_color="#f1d5e6"

        />
    <TextView
        android:text="cc"
android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:id="@+id/download"
        android:layout_below="@+id/pp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button


            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="انهاء"
            android:id="@+id/exit"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_radius"/>
        <Button


            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="تحميل اخر"
            android:id="@+id/another_load"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_radius"/>
    </RelativeLayout>
</RelativeLayout>